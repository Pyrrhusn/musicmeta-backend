  "dependencies": {
    "@faker-js/faker": "^8.3.1",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^11.0.2",
    "argon2": "^0.31.2",
    "config": "^3.3.9",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^7.0.2",
    "mysql2": "^3.6.2",
    "node-emoji": "^2.1.0",
    "objection": "^3.1.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "nodemonConfig": {
    "signal": "SIGTERM",
    "ignore": [
      "node_modules/*",
      ".vscode/*"
    ],
    "delay": "80",
    "watch": [
      "config",
      "src",
      "index.js"
    ],
    "ext": "js,json",
    "legacyWatch": true,
    "exec": "node --env-file=.env --inspect=0.0.0.0:9001 --trace-warnings src/index.js"
